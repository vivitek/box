{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext"],
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "built",
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["."],
      "utils/*": ["../utils/*"]
    }
  },
  "exclude": ["node_modules", "out", "prod", "built"],
  "include": ["src/**/*.ts", "../utils/**/*.ts"]
}