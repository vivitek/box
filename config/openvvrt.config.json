{
  "dependencies": [
    "network-manager",
    "net-tools",
    "python3-pip",
    "postgresql",
    "postgresql-contrib",
    "rabbitmq-server",
    "build-essential",
    "libpq-dev",
    "procps",
    "nftables"
  ],
  "hotspot": {
    "interface": "wlan0",
    "name": "VIVI",
    "password": "Viv12o2I!"
  },
  "services": [
    {
      "name": "RabbitMQ",
      "folder": ".",
      "preInstallCmd": [],
      "installCmd": [
        "bash config/initRabbitmq.sh"
      ],
      "runCmd": []
    },
    {
      "name": "Firewall",
      "folder": "firewall",
      "preInstallCmd": [
        "bash config/initFirewall.sh",
        "sudo systemctl daemon-reload"
      ],
      "installCmd": [
        "sudo pip3 install -r requirements.txt"
      ],
      "runCmd": [
        "sudo systemctl daemon-reload",
        "sudo systemctl enable firewall",
        "sudo systemctl enable nftables",
        "sudo systemctl start firewall",
        "sudo systemctl start nftables"
      ]
    },
    {
      "name": "DHCP",
      "folder": "dhcpd",
      "preInstallCmd": [],
      "installCmd": [
        "npm install",
        "./node_modules/typescript/bin/tsc"
      ],
      "runCmd": [
        "sudo pm2 start -f --name dhcp dist/main.js"
      ]
    },
    {
      "name": "GraphQL",
      "folder": "graphql",
      "preInstallCmd": [],
      "installCmd": [
        "npm install",
        "./node_modules/typescript/bin/tsc"
      ],
      "runCmd": [
        "sudo pm2 start -f --name graphql dist/index.js"
      ]
    }
  ]
}
